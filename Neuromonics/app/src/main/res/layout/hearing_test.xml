<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:background="#ffffff"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:baselineAligned="false"
        android:background="@color/tabBarColor"
        android:layout_weight="0.6"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:baselineAligned="false"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:orientation="horizontal" >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/backImage"
                    android:src="@mipmap/back"
                    android:layout_gravity="left"
                    android:clickable="true"
                    android:layout_weight="0.4"
                    android:onClick="myClickMethod"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="7"
                android:baselineAligned="false"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/doneCaption"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:visibility="invisible"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textColor="@color/black"
                    android:layout_gravity="left" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:baselineAligned="false"
                android:orientation="horizontal" >
                <ImageView
                    android:id="@+id/infoImage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:background="?selectableItemBackgroundBorderless"
                    android:src="@mipmap/info_image"
                    android:contentDescription="@string/skip_next"
                    android:clickable="true"
                    android:paddingRight="-30dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:baselineAligned="false"
        android:layout_weight="9.4"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:baselineAligned="false"
            android:layout_weight="4"
            android:orientation="vertical">
            <TextView
                android:id="@+id/homeInfo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:text="TextView"
                android:layout_gravity="center"
                android:width="@dimen/abc_action_bar_icon_vertical_padding_material"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:nestedScrollingEnabled="false"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:baselineAligned="false"
            android:layout_weight="0.5"
            android:orientation="vertical">
            <TextView
                android:id="@+id/startTestId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:nestedScrollingEnabled="true"
                android:layout_gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:baselineAligned="false"
            android:layout_weight="0.7"
            android:orientation="vertical"
            android:paddingTop="10dp">
            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:progressTint="@color/greyColor"
                android:thumbTint="@color/greyColor"
                android:layout_toLeftOf="@+id/startText"
                android:layout_toRightOf="@+id/endText"
                android:layout_toStartOf="@+id/startText"
                android:layout_toEndOf="@+id/endText" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:baselineAligned="false"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">
            <Button
                android:id="@+id/tapTest"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="Tap when you hear a tone..."
                android:textSize="18dp"
                android:textAllCaps="false"
                android:textColor="@color/whiteColor"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_gravity="left"
                android:background="@drawable/button_border" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:baselineAligned="false"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingLeft="10dp">
            <Button
                android:id="@+id/startTest"
                android:layout_height="30dp"
                android:layout_width="130dp"
                android:text="START TEST"
                android:textStyle="bold"
                android:fontFamily="Futura Condensed Medium"
                android:textSize="14dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_gravity="left"
                android:background="@drawable/button_bg" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>