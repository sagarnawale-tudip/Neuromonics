<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:background="#ffffff"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:baselineAligned="false"
        android:background="@color/tabBarColor"
        android:layout_weight="0.6"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:baselineAligned="false"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:orientation="horizontal" >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/backImage"
                    android:src="@mipmap/back"
                    android:layout_gravity="left"
                    android:clickable="true"
                    android:layout_weight="0.4"
                    android:onClick="myClickMethod"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="7"
                android:baselineAligned="false"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/doneCaption"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:visibility="invisible"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textColor="@color/black"
                    android:layout_gravity="left" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:baselineAligned="false"
                android:orientation="horizontal" >
                <ImageView
                    android:id="@+id/infoImage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:background="?selectableItemBackgroundBorderless"
                    android:src="@mipmap/info_image"
                    android:contentDescription="@string/skip_next"
                    android:clickable="true"
                    android:paddingRight="-30dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="9.4"
        android:baselineAligned="false"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:text="You are currently unsubscribed.\nYou must pick a subscription plan to proceed."
                android:nestedScrollingEnabled="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:baselineAligned="false"
            android:orientation="vertical" >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10"
                    android:baselineAligned="false"
                    android:orientation="horizontal" >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="5.7"
                        android:baselineAligned="false"
                        android:orientation="horizontal" >
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="10"
                            android:baselineAligned="false"
                            android:orientation="vertical" >
                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:baselineAligned="false"
                                android:orientation="vertical" >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textStyle="normal"
                                    android:textColor="@color/black"
                                    android:text="Pick the daily plan for occasional use."
                                    android:nestedScrollingEnabled="true"
                                    android:paddingLeft="20dp"
                                    android:paddingRight="20dp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.3"
                                android:baselineAligned="false"
                                android:orientation="vertical" >
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="8.7"
                                android:baselineAligned="false"
                                android:orientation="vertical" >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textStyle="normal"
                                    android:textColor="@color/black"
                                    android:text="All other plans are renewable. As more time is purchased, the price goes down. We suggest listening 2-4 hours per day for several months. The longer you listen the more your brain has a chance to overcome the ringing in your ears."
                                    android:nestedScrollingEnabled="true"
                                    android:paddingLeft="20dp"
                                    android:paddingRight="20dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="4.3"
                        android:baselineAligned="false"
                        android:orientation="horizontal" >
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="10"
                            android:baselineAligned="false"
                            android:orientation="vertical" >
                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:baselineAligned="false"
                                android:orientation="vertical" >
                                <Button
                                    android:id="@+id/daily"
                                    android:layout_height="30dp"
                                    android:layout_width="130dp"
                                    android:text="DAILY $0.99"
                                    android:fontFamily="Futura Condensed Medium"
                                    android:textSize="12dp"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:layout_gravity="center"
                                    android:background="@drawable/button_bg" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.3"
                                android:baselineAligned="false"
                                android:orientation="vertical" >
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:baselineAligned="false"
                                android:orientation="vertical" >
                                <Button
                                    android:id="@+id/weekly"
                                    android:layout_height="30dp"
                                    android:layout_width="130dp"
                                    android:text="WEEKLY $5.99"
                                    android:fontFamily="Futura Condensed Medium"
                                    android:textSize="12dp"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:layout_gravity="center"
                                    android:background="@drawable/button_bg" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.3"
                                android:baselineAligned="false"
                                android:orientation="vertical" >
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:baselineAligned="false"
                                android:orientation="vertical" >
                                <Button
                                    android:id="@+id/monthly"
                                    android:layout_height="30dp"
                                    android:layout_width="130dp"
                                    android:text="MONTHLY $24.99"
                                    android:fontFamily="Futura Condensed Medium"
                                    android:textSize="12dp"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:layout_gravity="center"
                                    android:background="@drawable/button_bg" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.3"
                                android:baselineAligned="false"
                                android:orientation="vertical" >
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:baselineAligned="false"
                                android:orientation="vertical" >
                                <Button
                                    android:id="@+id/threeMonth"
                                    android:layout_height="30dp"
                                    android:layout_width="130dp"
                                    android:text="3 MONTHLY $69.99"
                                    android:fontFamily="Futura Condensed Medium"
                                    android:textSize="12dp"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:layout_gravity="center"
                                    android:background="@drawable/button_bg" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.3"
                                android:baselineAligned="false"
                                android:orientation="vertical" >
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:baselineAligned="false"
                                android:orientation="vertical" >
                                <Button
                                    android:id="@+id/sixMonth"
                                    android:layout_height="30dp"
                                    android:layout_width="130dp"
                                    android:text="6 MONTHLY $149.99"
                                    android:fontFamily="Futura Condensed Medium"
                                    android:textSize="12dp"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:layout_gravity="center"
                                    android:background="@drawable/button_bg" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.3"
                                android:baselineAligned="false"
                                android:orientation="vertical" >
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:baselineAligned="false"
                                android:orientation="vertical" >
                                <Button
                                    android:id="@+id/yearly"
                                    android:layout_height="30dp"
                                    android:layout_width="130dp"
                                    android:text="YEARLY $0.99"
                                    android:fontFamily="Futura Condensed Medium"
                                    android:textSize="12dp"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:layout_gravity="center"
                                    android:background="@drawable/button_bg" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="3.8"
                                android:baselineAligned="false"
                                android:orientation="vertical" >
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:orientation="vertical"
            android:weightSum="1">
            <Button
                android:id="@+id/subscriptionButton"
                android:layout_height="10dp"
                android:layout_width="150dp"
                android:text="@string/restore_subscription"
                android:fontFamily="Futura Condensed Medium"
                android:textSize="12dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_gravity="bottom|center_horizontal"
                android:background="@drawable/button_bg"
                android:layout_weight="0.5" />
        </LinearLayout>
    </LinearLayout>